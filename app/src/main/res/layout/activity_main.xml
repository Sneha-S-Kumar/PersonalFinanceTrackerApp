<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:id="@+id/drawerlayout"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout

            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="670dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@drawable/gradient">

            <androidx.cardview.widget.CardView
                android:id="@+id/addcard"
                android:layout_width="250dp"
                android:layout_height="145dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cardviewshape">

                <ImageView
                    android:id="@+id/addbookimage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/budget" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addcategory"
                android:layout_width="250dp"
                android:layout_height="145dp"
                android:layout_marginLeft="75dp"

                android:layout_marginTop="200dp"
                android:background="@drawable/cardviewshape">

                <ImageView
                    android:id="@+id/searchbookimage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/expenses" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewcard"
                android:layout_width="250dp"
                android:layout_height="145dp"
                android:layout_marginLeft="75dp"

                android:layout_marginTop="360dp"
                android:background="@drawable/cardviewshape">

                <ImageView
                    android:id="@+id/viewbookimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/poor" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewbudget"
                android:layout_width="250dp"
                android:layout_height="145dp"
                android:layout_marginLeft="75dp"

                android:layout_marginTop="490dp"
                android:background="@drawable/cardviewshape">

                <ImageView
                    android:id="@+id/viewbudgetimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/activitytracker" />


            </androidx.cardview.widget.CardView>


        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.drawerlayout.widget.DrawerLayout>